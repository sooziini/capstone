<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/shape_reply"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/parent_reply_item_profile"
            android:layout_width="28sp"
            android:layout_height="28sp"
            app:srcCompat="@drawable/profile_cloud"
            app:tint="@color/main_color" />

        <TextView
            android:id="@+id/parent_reply_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="@string/user"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/parent_reply_item_comment_btn"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="6dp"
            app:srcCompat="@drawable/detail_comment" />

        <ImageView
            android:id="@+id/parent_reply_item_like_btn"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            app:srcCompat="@drawable/detail_like" />

        <ImageView
            android:id="@+id/parent_reply_item_report_btn"
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/reply_report" />

    </LinearLayout>

    <TextView
        android:id="@+id/parent_reply_item_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="14dp"
        android:text="@string/body"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/parent_reply_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textColor="@color/selected"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Time" />

        <ImageView
            android:id="@+id/parent_reply_item_like_img"
            android:layout_width="14sp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="2dp"
            app:srcCompat="@drawable/detail_like" />

        <TextView
            android:id="@+id/parent_reply_item_like_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="@string/count"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Time" />

    </LinearLayout>

</LinearLayout>